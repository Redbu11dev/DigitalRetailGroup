<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.MainFragment"
    android:background="@color/bg"
    android:animateLayoutChanges="true"
    >

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <include
        android:id="@+id/item1"
        layout="@layout/item_option"
        android:layout_height="@dimen/item_option_height"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar"
        android:layout_marginHorizontal="12dp"
        />

    <include
        android:id="@+id/item2"
        layout="@layout/item_option"
        android:layout_below="@id/item1"
        android:layout_height="@dimen/item_option_height"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/item1"
        android:layout_marginHorizontal="12dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_description"
        android:layout_below="@+id/item2"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"

        android:textAppearance="@style/TextAppearance.DigitalRetailGroup.Secondary"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/item2"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/partners_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/text"
        android:scrollbars="vertical"
        android:splitMotionEvents="false"
        android:layout_marginTop="12dp"
        tools:listitem="@layout/item_brand"
        tools:itemCount="4"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintBottom_toBottomOf="parent"

        android:paddingHorizontal="12dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        />

<!--    android:layoutAnimation="@anim/layout_animation"-->
<!--    app:layout_behavior="@string/appbar_scrolling_view_behavior"-->

    <include
        layout="@layout/item_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>