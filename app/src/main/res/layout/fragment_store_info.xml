<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.StoreInfoFragment"
    android:background="@color/bg">

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/custom_toolbar" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="411:240"
        app:srcCompat="@drawable/dummy_store_image"
        app:layout_constraintTop_toBottomOf="@id/custom_toolbar"
        android:scaleType="centerCrop"
        android:layout_below="@id/custom_toolbar"
        android:layout_marginTop="25dp"
        />

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="25dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Фирменный магазин Xiaomi. Здесь доступны такие услуги как демонстрация устройств и консультация."
            android:textSize="14dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/info_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:splitMotionEvents="false"
            android:elevation="10dp"
            tools:listitem="@layout/item_option"
            tools:itemCount="4"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_below="@id/address"
            android:layout_marginTop="31dp"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>