<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.dialogs.SaveProfileDataDialogFragment"
    android:padding="12dp"
    android:gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.DigitalRetailGroup.PseudoCard.FreeForm"
        >

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cross_btn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            style="@style/Widget.DigitalRetailGroup.ImageButton.Dialog.Cancel"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cross_btn"
            android:text="@string/dialog_error_title"
            android:gravity="center"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"

            android:textAppearance="@style/TextAppearance.DigitalRetailGroup.Generic"
            android:textSize="16dp"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            tools:text="Сведения об ошибке"
            android:gravity="center"
            android:layout_marginHorizontal="43dp"

            android:textAppearance="@style/TextAppearance.DigitalRetailGroup.Secondary"
            android:textSize="14dp"
            android:textColor="?colorError"
            />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#323E38"
            android:layout_below="@+id/message"
            android:layout_marginTop="27dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_below="@id/divider"
            >

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btn_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OK"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:layout_margin="16dp"

                style="@style/Widget.DigitalRetailGroup.ClickableTextView.Secondary"
                android:textSize="16dp"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>