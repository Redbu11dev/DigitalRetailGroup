<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.LoginPhoneFragment"
    android:background="@color/bg"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="phone"
        />

    <TextView
        android:id="@+id/contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/contact_us"
        android:layout_centerHorizontal="true"
        style="@style/Widget.DigitalRetailGroup.ClickableTextYellow"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/login_problems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_problems"
        android:layout_centerHorizontal="true"
        style="@style/Widget.DigitalRetailGroup.ClickableTextGreen"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/contact_us"
        />

</RelativeLayout>