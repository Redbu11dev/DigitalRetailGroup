<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_card_item_bgr"
        android:paddingHorizontal="16dp"
        android:paddingVertical="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            style="@style/Widget.DigitalRetailGroup.NotificationItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/icon_end"
            android:text="С новым годом!" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_end"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_arrow_right" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text"
            style="@style/Widget.DigitalRetailGroup.NotificationItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="11dp"
            android:text="Команда компании DRG поздравляет вас с sad asd dsa f" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/date"
            style="@style/Widget.DigitalRetailGroup.NotificationItemDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_marginTop="11dp"
            android:text="14:30" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>