    <style name="Widget.DigitalRetailGroup.SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/snackbar_bgr</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.DigitalRetailGroup.SnackbarTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
<!--        <item name="android:background">@drawable/snackbar_bgr</item>-->

        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.SnackbarButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">24dp</item>

        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">16dp</item>

        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>

<!--        <item name="backgroundTint">@null</item>-->
    </style>

