<!--    Other widget styles-->

    <style name="Widget.DigitalRetailGroup.GoldButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/rounded_btn2</item>
        <item name="android:textColor">@color/bg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.DigitalRetailGroup.GreenButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/rounded_btn1</item>
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="Widget.DigitalRetailGroup.TextGeneric" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="Widget.DigitalRetailGroup.TextDescription" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/not_active</item>
    </style>

    <style name="Widget.DigitalRetailGroup.PseudoCard" parent="">
        <item name="android:background">@drawable/card_item_bgr</item>
        <item name="layout_constraintDimensionRatio">343:220</item>
    </style>

    <style name="Widget.DigitalRetailGroup.NotificationItemTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.DigitalRetailGroup.NotificationItemText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/not_active</item>
        <item name="android:textSize">14dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.DigitalRetailGroup.LoginHeadlineText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.LoginDescriptionText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.BottomClickableTextSecondary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/clickable_green_text_color</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.BottomClickableTextPrimary" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/clickable_yellow_text_color</item>
        <item name="gtvSecondaryColor">@color/clickable_yellow_end_text_color</item>
<!--        <item name="gtvSecondaryColor">#FF0000</item>-->
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.NotificationItemDate" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/not_active</item>
        <item name="android:textSize">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="Widget.DigitalRetailGroup.NotificationItemViewText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/app_white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundColor">@color/bg_shadow</item>
        <item name="boxStrokeColor">@color/text_input_stroke</item>
    </style>

    <style name="Widget.DigitalRetailGroup.EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:lines">1</item>
        <item name="android:textSize">16dp</item>
        <item name="hintTextColor">@color/not_active</item>
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="Widget.DigitalRetailGroup.TextInputTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/not_active</item>
    </style>

    <style name="Widget.DigitalRetailGroup.RadioButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/radiobutton_text_colors</item>
        <item name="android:paddingLeft">16dp</item>
    </style>




