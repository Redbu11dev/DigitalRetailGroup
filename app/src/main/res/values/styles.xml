    <style name="Widget.DigitalRetailGroup.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@drawable/bgr_snackbar</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.DigitalRetailGroup.SnackbarText" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
<!--        <item name="android:background">@drawable/snackbar_bgr</item>-->

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.SnackbarButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">24dp</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>

        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>

<!--        <item name="backgroundTint">@null</item>-->
    </style>

<!--    Other widget styles-->

    <style name="Widget.DigitalRetailGroup.Button.Main" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/selector_btn_main</item>

        <item name="android:textColor">@color/bg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.DigitalRetailGroup.Button.Green" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/selector_btn_secondary</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.DigitalRetailGroup.PseudoCard.FreeForm" parent="">
        <item name="android:background">@drawable/bgr_card</item>
    </style>

    <style name="Widget.DigitalRetailGroup.PseudoCard.Big" parent="Widget.DigitalRetailGroup.PseudoCard.FreeForm">
        <item name="layout_constraintDimensionRatio">343:220</item>
    </style>

    <style name="Widget.DigitalRetailGroup.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="Widget.DigitalRetailGroup.IconImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/selector_icon_background</item>
    </style>

    <style name="Widget.DigitalRetailGroup.ImageButton.Dialog.Cancel" parent="Widget.AppCompat.ImageButton">
        <item name="srcCompat">@drawable/ic_cancel</item>
        <item name="android:background">?selectableItemBackground</item>
    </style>

<!--    Text related styles (do not want to make separate text appearances because they are not defined by design)-->

    <style name="Widget.DigitalRetailGroup.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<!--        <item name="boxBackgroundColor">@color/bg</item>-->
        <item name="android:background">@drawable/bgr_textfield</item>
        <item name="android:layerType">software</item>

        <item name="hintEnabled">false</item>
        <item name="endIconMode">clear_text</item>

        <item name="strokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>

        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>

        <item name="boxStrokeColor">@color/selector_color_textinput_stroke</item>

        <!--        <item name="boxStrokeColor">@color/selector_text_input_stroke</item>-->
    </style>

    <style name="Widget.DigitalRetailGroup.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/not_active_50_percent</item>
    </style>

    <style name="Widget.DigitalRetailGroup.TextInputLayout.Titled" parent="Widget.DigitalRetailGroup.TextInputLayout">
        <item name="android:layout_marginTop">8dp</item>
        <!--        <item name="boxStrokeColor">@color/selector_text_input_stroke</item>-->
    </style>

    <style name="Widget.DigitalRetailGroup.TextView.OneLine" parent="Widget.MaterialComponents.TextView">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.DigitalRetailGroup.ClickableTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.DigitalRetailGroup.ClickableTextView.GradientTextView" parent="Widget.DigitalRetailGroup.ClickableTextView">
        <item name="android:textColor">@color/button_start</item>
        <item name="gtvSecondaryColor">@color/button_end</item>
    </style>

    <style name="Widget.DigitalRetailGroup.ClickableTextView.Secondary" parent="Widget.DigitalRetailGroup.ClickableTextView">
        <item name="android:textColor">@color/not_active</item>
    </style>

